{
    "name": "utipd/counterparty-follower",
    "description": "A Counterparty send transaction follower.",
    "keywords": ["bitcoin", "counterparty", "transaction"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Devon Weller",
            "email": "dweller@devonweller.com",
            "homepage": "http://devonweller.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "utipd/xcpd-client": "dev-master",
        "psr/log": "~1",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~4"
    },
    "suggest": {
        "utipd/native-follower": "This will let your application respond to Bitcoin block orphans"
